// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Department {
    id          String        @id
    name        String
    founding    DateTime
    description String?
    specialized Specialized[]
    classes     Classes[]
    Instructor  Instructor[]
    Subject     Subject[]
    Student     Student[]
}

model Specialized {
    id            String      @id
    name          String
    description   String?
    department_id String?
    department    Department? @relation(fields: [department_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    classes       Classes[]
    Student       Student[]
}

model SchoolYear {
    id         Int       @id @default(autoincrement())
    schoolyear String
    classes    Classes[]
    Student    Student[]
}

enum Status {
    STUDYING
    STOP
    RESERVE
}

model Classes {
    id             String       @id
    name           String
    department_id  String?
    specialized_id String?
    schoolyear_id  Int?
    instructorId   String?      @unique
    department     Department?  @relation(fields: [department_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    specialized    Specialized? @relation(fields: [specialized_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    schoolyear     SchoolYear?  @relation(fields: [schoolyear_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    Student        Student[]
    Instructor     Instructor?  @relation(fields: [instructorId], references: [id])
}

enum Gender {
    MALE
    FEMALE
}

model Subject {
    id           String      @id
    name         String
    Score        Score[]
    departmentId String?
    credit       Int
    department   Department? @relation(fields: [departmentId], references: [id], onUpdate: Cascade, onDelete: SetNull)
    Student      Student[]
}

model Score {
    id        Int      @id @default(autoincrement())
    CC        Float
    Midterm   Float?
    Final     Float?
    Total     Float?
    studentId String?
    subject   Subject? @relation(fields: [subjectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    subjectId String?
    Student   Student? @relation(fields: [studentId], references: [id])
}

model Instructor {
    id           String      @id
    fullname     String
    address      String
    email        String      @unique
    phone        String
    level        String
    departmentId String?
    department   Department? @relation(fields: [departmentId], references: [id], onUpdate: Cascade, onDelete: SetNull)
    image        String?     @db.LongText
    gender       Gender
    birth        DateTime
    Classes      Classes?
}

model Student {
    id             String       @id
    fullname       String
    address        String
    department     Department?  @relation(fields: [department_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    department_id  String?
    schoolyear     SchoolYear?  @relation(fields: [schoolyear_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    schoolyear_id  Int?
    specialized    Specialized? @relation(fields: [specialized_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    specialized_id String?
    classes        Classes?     @relation(fields: [class_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
    class_id       String?
    Subject        Subject[]
    Score          Score[]
    StudentInfo    StudentInfo?
}

model User {
    username String @id
    password String
}

model StudentInfo {
    id                   String   @id
    birth                DateTime
    phone                String
    Student              Student  @relation(fields: [student_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
    student_id           String   @unique
    status               Status   @default(STUDYING)
    gpa                  Float
    email                String   @unique
    gender               Gender?
    image                String?  @db.LongText
    nation               String
    religion             String?  @default("")
    homeTown             String
    fatherName           String
    motherName           String
    identificationNumber String
    fatherPhone          String?
    motherPhone          String?
    motherWork           String?
    fatherWork           String?
    placeOfBirth         String
}
